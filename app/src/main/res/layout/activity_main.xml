<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbaaaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sohag.dnatesting.Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your option"
        android:textSize="20dp"
        android:textColor="#bb0000"
        android:id="@+id/tv1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paternity"
        android:id="@+id/button1"
        android:onClick="send1"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="115dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maternity"
        android:id="@+id/button2"
        android:onClick="send2"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="115dp"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parents  detect"
        android:id="@+id/button3"
        android:onClick="send3"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="95dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relation  check"
        android:id="@+id/button4"
        android:onClick="send4"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="95dp"/>

</FrameLayout>
