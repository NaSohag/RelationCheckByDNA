<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sohag.dnatesting.Maternity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Child's DNA"
        android:inputType="textCapSentences"
        android:layout_marginTop="10dp"
        android:id="@+id/etp1"
        android:background="#dddddd"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Father's DNA"
        android:inputType="textCapSentences"
        android:layout_marginTop="20dp"
        android:background="#dddddd"
        android:id="@+id/etp2"
        android:layout_below="@+id/etp1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="DNA of Woman_1"
        android:inputType="textCapSentences"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:id="@+id/etp3"
        android:layout_below="@+id/etp2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btp1"
        android:layout_below="@+id/etp3"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textColor="#bb00"
        android:id="@+id/btp2"
        android:layout_below="@+id/etp3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvp1"
        android:textSize="25dp"
        android:textColor="#bb00"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btp1"
        android:layout_alignLeft="@+id/btp1"
        android:layout_alignStart="@+id/btp1" />

</RelativeLayout>
